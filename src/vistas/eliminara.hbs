<form action="/autores/eliminar" method="post">
  <label>Nombre del Autor: </label>
  <input type="text" name="nombre" id="nombre" maxlength="60" required />
  <br />
  <button>Consultar libro</button>
  <br />
</form>

<table border="1">
  <thead>
    <tr>
      <th>No</th>
      <th>Nombre del Autor</th>
      <th>Apellido del Autor</th>
      <th>Fecha publicación primer libro</th>
      <th>Premios</th>
      <th>Fecha de nacimiento</th>
      <th>Fecha de fallecimiento</th>
    </tr>
  </thead>
  <tbody>
    {{#if autores.length}}
      {{#each autores}}
        <tr>
          <td>{{@index}}</td>
          <td>{{nombre}}</td>
          <td>{{apellidos}}</td>
          <td>{{formatearFecha fecPub}}</td>
          <td>{{premios}}</td>
          <td>{{formatearFecha fecNac}}</td>
          <td>{{formatearFecha fecFall}}</td>
        </tr>
      {{/each}}
    {{else}}
      <tr>
        <td colspan="8">No se encontró ningún autor.</td>
      </tr>
    {{/if}}
  </tbody>
</table>

{{#if autores.length}}
  <form action="/autor/eliminar/{{autores.0._id}}" method="post" style="margin-top: 15px;">
    <button type="submit">Eliminar Autor</button>
  </form>
{{/if}}

<br />
