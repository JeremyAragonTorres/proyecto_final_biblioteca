<div class="container mt-4">
  <h2 class="text-center mb-4 text-danger">Eliminar Autor</h2>

  <form action="/autores/eliminar" method="post" class="mb-4">
    <div class="mb-3">
      <label for="nombre" class="form-label">Nombre del Autor:</label>
      <input type="text" name="nombre" id="nombre" class="form-control" maxlength="60" required />
    </div>
    <button type="submit" class="btn btn-danger">Consultar Autor</button>
  </form>

  <table class="table table-bordered table-striped">
    <thead class="table-dark text-center">
      <tr>
        <th>No</th>
        <th>Nombre del Autor</th>
        <th>Apellido del Autor</th>
        <th>Fecha publicación primer libro</th>
        <th>Premios</th>
        <th>Fecha de nacimiento</th>
        <th>Fecha de fallecimiento</th>
      </tr>
    </thead>
    <tbody>
      {{#if autores.length}}
        {{#each autores}}
          <tr>
            <td>{{@index}}</td>
            <td>{{nombre}}</td>
            <td>{{apellidos}}</td>
            <td>{{formatearFecha fecPub}}</td>
            <td>{{premios}}</td>
            <td>{{formatearFecha fecNac}}</td>
            <td>{{formatearFecha fecFall}}</td>
          </tr>
        {{/each}}
      {{else}}
        <tr>
          <td colspan="7" class="text-center">No se encontró ningún autor.</td>
        </tr>
      {{/if}}
    </tbody>
  </table>

  {{#if autores.length}}
    <form action="/autor/eliminar/{{autores.0._id}}" method="post" onsubmit="return confirm('¿Estás seguro de que deseas eliminar este autor?');" class="text-center mt-4">
      <button type="submit" class="btn btn-outline-danger">Eliminar Autor</button>
    </form>
  {{/if}}
</div>